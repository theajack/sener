{
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "dist",
        "sourceMap": false,
        "target": "es2016",
        "module": "esnext",
        "moduleResolution": "node",
        "allowJs": true,
        "noUnusedLocals": true,
        "strictNullChecks": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "experimentalDecorators": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "removeComments": false,
        "jsx": "preserve",
        "lib": ["esnext", "dom"],
        "types": ["node", "./env.d.ts"],
        "rootDir": ".",
        "noEmit": false,
        "paths": {}
    },
    "include": [
        "packages/*/src/**/*",
        "services/**/*",
        ".eslintrc.js",
        "../babel.config.js",
        "scripts/**/*"
    ],
    "exclude": [
        "./node_modules"
    ]
}